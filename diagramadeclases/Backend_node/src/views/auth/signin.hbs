<header class="masthead2 flex items-center justify-center min-h-screen bg-black">
  <div class="w-full max-w-md px-6">
    <div class="bg-gray-900 shadow-lg rounded-2xl overflow-hidden">

      <!-- Header de la tarjeta -->
      <div class="bg-green-600 text-white text-center py-6">
        <h3 class="text-2xl font-semibold">Inicio de Sesión</h3>
      </div>

      <!-- Contenido de la tarjeta -->
      <div class="p-8">
        <div class="flex justify-center mb-6">
          <img src="/img/Logo1.png" alt="Logo FICCT" class="h-24 w-auto">
        </div>

        <form action="/signin" method="POST" class="space-y-5">
          <div class="relative">
            <i class="bx bx-envelope absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-xl"></i>
            <input type="text" name="correo" placeholder="Correo electrónico"
              class="w-full pl-10 pr-4 py-3 border border-gray-700 bg-black text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
          </div>

          <div class="relative">
            <i class="bx bx-lock-alt absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-xl"></i>
            <input type="password" name="password" placeholder="Contraseña"
              class="w-full pl-10 pr-4 py-3 border border-gray-700 bg-black text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
          </div>

          <button type="submit"
            class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-xl shadow-lg transition">
            <i class="bx bx-log-in mr-2 text-lg align-middle"></i> Aceptar
          </button>
        </form>
      </div>

    </div>
  </div>
</header>
