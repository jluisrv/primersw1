<div class="min-h-screen bg-gray-100 flex items-center justify-center p-6">
  <div class="w-full max-w-md">

    <!-- Header de la sala -->
    <div class="bg-blue-700 text-white rounded-t-xl p-6 text-center shadow">
      <h1 class="text-lg font-bold">Editar Sala de Diagrama de Clases</h1>
    </div>

    <!-- Formulario -->
    <div class="bg-white rounded-b-xl shadow p-6 space-y-4">

      <form action="/salas/edit/{{sala.id}}" method="POST" class="space-y-4">

        <!-- Título -->
        <div class="relative">
          <i class="bx bx-heading absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
          <input type="text" name="title" placeholder="Título" value="{{sala.title}}"
            class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm">
          <p class="text-gray-500 text-xs mt-1">Nombre de tu sala, ejemplo: "Diagrama de Clases Producto".</p>
        </div>

        <!-- XML -->
        <div class="relative">
          <i class="bx bx-code-alt absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
          <input type="text" name="xml" placeholder="XML" value="{{sala.xml}}"
            class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm">
          <p class="text-gray-500 text-xs mt-1">Ingresa el XML que define tu diagrama.</p>
        </div>

        <!-- Descripción -->
        <div class="relative">
          <i class="bx bx-comment-detail absolute left-3 top-2 text-gray-400"></i>
          <textarea name="description" rows="3" placeholder="Descripción"
            class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm">{{sala.description}}</textarea>
          <p class="text-gray-500 text-xs mt-1">Describe tu diagrama o agrega un prompt para ayudar al sistema.</p>
        </div>

        <!-- Botón Aceptar -->
        <div class="text-center">
          <button type="submit"
            class="inline-flex items-center gap-2 bg-blue-700 hover:bg-blue-800 text-white font-medium py-2 px-4 rounded-lg shadow text-sm transition">
            <i class="bx bx-check"></i> Aceptar
          </button>
        </div>

      </form>
    </div>
  </div>
</div>